---
import Layout from '../layouts/Layout.astro';
---

<Layout title="nixy">
  <div class="bg-gray-800 rounded-2xl shadow-xl p-8 text-center w-full max-w-sm space-y-6">
    <img
      src="/assets/avatar.jpg"
      alt="Avatar"
      class="w-32 h-32 mx-auto rounded-full border-4 border-white shadow-lg transition-transform duration-300 hover:scale-110"
    />

    <h1 class="text-3xl font-bold">Hii!! I'm nixy</h1>
    <p class="text-xl text-gray-300 mt-1">Full Stack Dev</p>

    <div class="flex justify-center space-x-6 text-2xl mt-4">
      <a href="https://www.instagram.com/nixy2937/" target="_blank" class="hover:text-pink-500 transition-colors"><i class="fab fa-instagram"></i></a>
      <a href="https://x.com/AoioByNico1" target="_blank" class="hover:text-blue-400 transition-colors"><i class="fab fa-twitter"></i></a>
      <a href="https://github.com/nixylol" target="_blank" class="hover:text-gray-300 transition-colors"><i class="fab fa-github"></i></a>
      <a href="mailto:contact@nixy.lol" target="_blank" class="hover:text-gray-300 transition-colors"><i class="fab fa-envelope"></i></a>
      <a href="#" id="discordBtn" class="hover:text-indigo-400 transition-colors"><i class="fab fa-discord"></i></a>
    </div>
  </div>

  <script>
    document.getElementById("discordBtn").addEventListener("click", function(e) {
      e.preventDefault();
      const discordUser = "nixy_lol";
      navigator.clipboard.writeText(discordUser).then(() => {
        alert("Copied: " + discordUser);
      }).catch(err => {
        console.error("Error", err);
      });
    });
  </script>
</Layout>
